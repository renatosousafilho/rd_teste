<h3>Contacts</h3>

<p><%= flash[:notice] %></p>

<table>
  <tr>
    <th>Name</th>
    <th>Email</th>
	<th>Opções</th>
  </tr>
  <% @contacts.each do |contact| %>
    <tr>
      <td><%= contact.name %></td>
      <td><%= contact.email %></td>
	  <td><%= link_to 'See contact', contact_path(contact) %></td>
    </tr>
  <% end %>
</table>

<%= link_to "New contact", new_contact_path %>
